#! /bin/bash
source etl_env.shinclude
source bin/etl_config.shinclude

echo "Are you sure that you want to remove the index configuration for ${index_name}?"
echo "The index on SOLR host ${solr_host} will remain."
need_confirm

cd "${LILY_HOME}"

echo "Disabling lily index."
./bin/lily-update-index --zookeeper "${zookeeper_host}" -n "${index_name}" --state DELETE_REQUESTED

echo "Done."
