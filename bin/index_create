#! /bin/bash
source settings.shinclude
source bin/management.shinclude

cd "${LILY_HOME}"

for index in $INDEXES; do
    name="${index%%:*}"
    host="${index#*:}"

    echo "Creating index ${name} on host ${host}..."
    
    ./bin/lily-add-index \
        --zookeeper "${ZOOKEEPER_HOST}" \
        --name "${name}" \
        --solr-shards "${name}_1:http://${host}/solr/" \
        --indexer-config "${INDEXER_CONF}"

done
