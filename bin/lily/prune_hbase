#! /bin/bash
source settings.shinclude
source bin/lily/management.shinclude

echo "Sure you want to drop all lily-tables in your hbase installation?"
echo "(${TABLES})"
need_confirm

prune_cmd=""
for t in $TABLES; do prune_cmd="$prune_cmd disable '${t}'; drop '${t}';"; done

echo "$prune_cmd" | hbase shell

