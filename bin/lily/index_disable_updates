#! /bin/bash
source settings.shinclude
source bin/management.shinclude

cd "${LILY_HOME}"

for index in $INDEXES; do
    name="${index%%:*}"
    host="${index#*:}"

    echo "Disabling updates to index ${name} (host: ${host})."
    
    ./bin/lily-update-index \
        --zookeeper "${ZOOKEEPER_HOST}" \
        --name "${name}" \
        --update-state "DO_NOT_SUBSCRIBE"

    echo "Disabled."

done
