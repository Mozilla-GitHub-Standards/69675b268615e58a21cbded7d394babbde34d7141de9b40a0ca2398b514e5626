#!/bin/bash

# Archive any existing log files. Can be called daily to reduce clutter.
mkdir -p "log/import"
mkdir -p "log/update"
mkdir -p "log/archive"
mkdir -p "log/$(date +'%Y-%m-%d')-full"
tar -czf "log/archive/$(date +'%Y%m%d_%H%m').tar.gz" \
    log/*-full \
    log/import \
    log/update \
    && rm -r log/*-full log/import log/update
