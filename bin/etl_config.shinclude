#! /bin/bash

index_name="bmo_v1"
indexerconf="${ETL_HOME}/configuration/lily/indexer/indexerconf.xml"
tables="record type indexmeta blob links-backward links-forward mq-shard1 wal-shard1"


need_confirm() {
    echo "Type 'Yes' to confirm."
    read confirmation
    if [[ "${confirmation}" != "Yes" ]];
    then
        echo "Aborted."
        exit 0
    fi
}
